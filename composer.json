{
  "name": "monolith/web-routing",
  "description": "A router designed for web requests for the Monolith framework",
  "keywords": [
    "monolith",
    "web routing",
    "routing"
  ],
  "authors": [
    {
      "name": "Shawn McCool",
      "email": "shawn@heybigname.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "monolith/http": "^9",
    "monolith/collections": "^5",
    "monolith/dependency-injection": "^6"
  },
  "require-dev": {
    "phpspec/phpspec": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "Monolith\\WebRouting\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\Monolith\\WebRouting\\": "spec/"
    },
    "files": [
      "spec/functions.php"
    ]
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "minimum-stability": "dev"
}
