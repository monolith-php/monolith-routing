{
  "name": "monolith/web-routing",
  "description": "A router designed for web requests for the Monolith framework",
  "keywords": [
    "monolith",
    "web routing",
    "routing"
  ],
  "require": {
    "php": ">=8",
    "monolith/http": "^12",
    "monolith/collections": "^9",
    "monolith/dependency-injection": "^9"
  },
  "require-dev": {
    "phpspec/phpspec": "^7"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.humanmusic.eu",
      "canonical": false,
      "only": [
        "monolith/*"
      ]
    }
  ],
  "autoload": {
    "psr-4": {
      "Monolith\\WebRouting\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\Monolith\\WebRouting\\": "spec/"
    },
    "files": [
      "spec/functions.php"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev"
}
