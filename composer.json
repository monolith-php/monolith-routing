{
  "name": "monolith/web-routing",
  "description": "A router designed for web requests for the Monolith framework",
  "keywords": [
    "monolith",
    "web routing",
    "routing"
  ],
  "require": {
    "php": ">=8.1",
    "monolith/http": "^13",
    "monolith/collections": "^10",
    "monolith/dependency-injection": "^10"
  },
  "require-dev": {
    "phpspec/phpspec": "^7"
  },
  "autoload": {
    "psr-4": {
      "Monolith\\WebRouting\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\Monolith\\WebRouting\\": "spec/"
    },
    "files": [
      "spec/functions.php"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev"
}
